<!DOCTYPE html>
<html>
    <head>
        <% include ./partials/head %>
    </head>

    <body>
        <% include ./partials/header %>
        <% include ./partials/sidePanel %>
        <div id="main">
            <h2>Course Name: </h2> <br />
            <span><%= data.name %></span>

            <h2>Course Status: </h2> <br />
            <span><%= data.status %></span>

            <h2>Course Code: </h2> <br />
            <span><%= data.courseCode %></span>

            <h2>Professor: </h2> <br />
            <span><%= data.prof.name %></span>

            <h2>Credit Hours: </h2> <br />
            <span><%= data.creditHours %></span>

            <div id="redirect-container" class="list">
                <form method="post" action="<%= data.url %>/delete">
                    <input type="hidden" name="course" value="<%= data._id %>" required=true>
                    <input type="submit" value="Delete" />
                </form>
                <!-- <p class="redirect confirm-delete">
                        Delete
                </p> -->
            </div>
        </div>
    </body>
</html>
